# ========================================
# VARIABLES DE ENTORNO - EJEMPLO
# ========================================
# Copia este archivo como .env.local y configura tus valores

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_USE_REAL_API=false
VITE_API_TIMEOUT=10000

# Mock Server Configuration
VITE_MOCK_DELAY_MS=800
VITE_SIMULATE_ERRORS=false
VITE_ERROR_RATE=0.1

# Authentication
VITE_AUTH_TOKEN_KEY=fintech_auth_token
VITE_REFRESH_TOKEN_KEY=fintech_refresh_token
VITE_SESSION_TIMEOUT=3600000

# Theme Configuration
VITE_THEME_STORAGE_KEY=fintech-theme
VITE_DEFAULT_THEME=light

# Application Configuration
VITE_APP_NAME=My Fintech
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Dashboard Financiero Personal

# Development Features
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_API_MOCKING=true

# External Services
VITE_ANALYTICS_URL=https://analytics.example.com
VITE_SENTRY_DSN=
VITE_STRIPE_PUBLIC_KEY=

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_CREDIT_CALCULATOR=true

# Performance
VITE_ENABLE_PWA=false
VITE_CACHE_STRATEGY=networkFirst

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
