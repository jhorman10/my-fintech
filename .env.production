# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================

# API Configuration
VITE_API_BASE_URL=https://api.myfintech.com/v1
VITE_USE_REAL_API=true
VITE_API_TIMEOUT=15000

# Mock Server Configuration (disabled in production)
VITE_MOCK_DELAY_MS=0
VITE_SIMULATE_ERRORS=false
VITE_ERROR_RATE=0

# Authentication
VITE_AUTH_TOKEN_KEY=fintech_auth_token
VITE_REFRESH_TOKEN_KEY=fintech_refresh_token
VITE_SESSION_TIMEOUT=3600000

# Theme Configuration
VITE_THEME_STORAGE_KEY=fintech-theme
VITE_DEFAULT_THEME=light

# Application Configuration
VITE_APP_NAME=My Fintech
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Dashboard Financiero Personal

# Development Features (disabled in production)
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_API_MOCKING=false

# External Services
VITE_ANALYTICS_URL=https://analytics.myfintech.com
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_live_key

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_CREDIT_CALCULATOR=true

# Performance
VITE_ENABLE_PWA=true
VITE_CACHE_STRATEGY=cacheFirst

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=https://myfintech.com,https://www.myfintech.com
